<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="480dp"
    android:layout_height="match_parent"
    android:background="@color/white">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_goods_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp30"
            android:paddingStart="@dimen/dp30"
            android:textColor="@color/black"
            android:textSize="@dimen/sp27" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_goods_spec"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp15"
            android:paddingStart="@dimen/dp30"
            android:textColor="@color/black"
            android:textSize="@dimen/sp27" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp30"
            android:paddingStart="@dimen/dp30"
            android:visibility="gone">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_t1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="采购数量:"
                android:textColor="@color/black"
                android:textSize="@dimen/sp27" />

            <LinearLayout
                android:id="@+id/ll_edit_count"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/dp15"
                android:layout_toStartOf="@+id/tv_buy_unit"
                android:layout_toEndOf="@+id/tv_t1"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/edit_current_count"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/shape_input_unit"
                    android:gravity="center"
                    android:hint="请输入采购数量"
                    android:inputType="numberDecimal"
                    android:textColor="@color/black_3"
                    android:textColorHint="#cccccc"
                    android:textSize="@dimen/sp27" />

            </LinearLayout>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_buy_unit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:padding="@dimen/dp15"
                android:text="斤"
                android:textColor="@color/black"
                android:textSize="@dimen/sp27" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp15"
            android:paddingStart="@dimen/dp30"
            android:visibility="gone">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_buy_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="采购价格:"
                android:textColor="@color/black"
                android:textSize="@dimen/sp27" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/dp15"
                android:layout_toStartOf="@+id/tv_cash_unit"
                android:layout_toEndOf="@+id/tv_buy_price"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/edit_buy_price"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/shape_input_unit"
                    android:gravity="center"
                    android:hint="请输入采购价格"
                    android:inputType="numberDecimal"
                    android:textColor="@color/black_3"
                    android:textColorHint="#cccccc"
                    android:textSize="@dimen/sp27" />

            </LinearLayout>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_cash_unit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:padding="@dimen/dp15"
                android:text="元"
                android:textColor="@color/black"
                android:textSize="@dimen/sp27" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginTop="@dimen/dp30"
            android:background="#f0f0f0" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp30"
            android:paddingStart="@dimen/dp30">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_t3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="配送数量:"
                android:textColor="@color/black"
                android:textSize="@dimen/sp27" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/dp15"
                android:layout_toStartOf="@+id/tv_buy_unit2"
                android:layout_toEndOf="@+id/tv_t3"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/edit_match_count"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/shape_input_unit"
                    android:gravity="center"
                    android:hint="请输入配送数量"
                    android:inputType="numberDecimal"
                    android:textColor="@color/black_3"
                    android:textColorHint="#cccccc"
                    android:textSize="@dimen/sp27" />

            </LinearLayout>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_buy_unit2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:padding="@dimen/dp15"
                android:text="斤"
                android:textColor="@color/black"
                android:textSize="@dimen/sp27" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp15"
            android:orientation="horizontal"
            android:paddingStart="@dimen/dp30">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_receive_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="配送价格:"
                android:textColor="@color/black"
                android:textSize="@dimen/sp27" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/dp15"
                android:layout_toStartOf="@+id/tv_cash_unit2"
                android:layout_toEndOf="@+id/tv_receive_price"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/edit_receive_price"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/shape_input_unit"
                    android:gravity="center"
                    android:hint="请输入配送价格"
                    android:inputType="numberDecimal"
                    android:textColor="@color/black_3"
                    android:textColorHint="#cccccc"
                    android:textSize="@dimen/sp27" />

            </LinearLayout>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_cash_unit2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:padding="@dimen/dp15"
                android:text="元"
                android:textColor="@color/black"
                android:textSize="@dimen/sp27" />
        </RelativeLayout>

    </androidx.appcompat.widget.LinearLayoutCompat>


    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_cancel"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:background="#6AC75B"
            android:text="取消"
            android:textColor="@color/white"
            android:textSize="@dimen/sp24" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_confirm"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:background="#F15252"
            android:text="确定"
            android:textColor="@color/white"
            android:textSize="@dimen/sp24" />

    </androidx.appcompat.widget.LinearLayoutCompat>

</RelativeLayout>